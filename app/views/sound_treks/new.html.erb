<h1>Create A New SoundTrek</h1>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@sound_trek], url: {action: "create"} do |f| %> -->  <%= f.label :title %><br>
  <%= f.text_area :title %><br>
   <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.hidden_field :location_id, :value => params[:location_id] %>
  <!-- Need to remove hidden_field for playlist_id -->
  <%= f.hidden_field :playlist_id, :value => 1 %>

  <!-- Add Playlist -->
  <%= f.submit "Create" %>
<% end %>
