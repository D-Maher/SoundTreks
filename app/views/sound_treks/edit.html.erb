<h1>Edit SoundTrek</h1>

<%= form_for @sound_trek, url: sound_trek_path(@sound_trek), method: :patch do |f| %>
  <% if @sound_trek.errors.any? %>
    <% @sound_trek.errors.full_messages.each do |error| %>
    <li class='error'><%= error %></li>
    <% end %>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
   <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.select(:playlist, options_from_collection_for_select(@playlists, 'id', 'name')) %><br><br>

  <%= f.submit "Submit" %>
<% end %>
