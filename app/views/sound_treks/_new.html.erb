<h1>Create A New SoundTrek</h1>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @sound_trek, url: sound_treks_path, html: {id: "new-sound-trek-form"} do |f| %>
  <%= f.label :title %><br>
  <%= f.text_area :title %><br><br>
   <%= f.label :description %><br>
  <%= f.text_area :description %><br><br>
  <%= f.label "Select a playlist:" %><br>
  <%= f.select(:playlist, options_from_collection_for_select(@playlists, 'id', 'name')) %><br><br>
  <%= f.hidden_field :trekker_id, :value => current_user.id %>
  <%= f.submit "Submit" %>
<% end %>
