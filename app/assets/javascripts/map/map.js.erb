var soundTrekIcon = {
  url: "<%= asset_path('sound_trek_marker.png') %>",
  scaledSize: new google.maps.Size(30, 30)
}

var userIcon = {
  url: "<%= asset_path('user_marker.png') %>",
  scaledSize: new google.maps.Size(15, 15),
  anchor: new google.maps.Point(8, 7)
}

function setCurrentPosition(map, position) {
  var userMarker = new google.maps.Marker({
    position: {lat: position.coords.latitude, lng: position.coords.longitude},
    map: map,
    icon: userIcon,
    title: 'Current Position'
  });
  map.panTo(new google.maps.LatLng(
    position.coords.latitude,
    position.coords.longitude
  ));
}

var cleanMapStyle = [{
  featureType: "poi",
  elementType: "labels",
  stylers: [{ visibility: "off" }]
}]

function initMap(position) {
  var map = new google.maps.Map(document.getElementById('map'), {
    // center: {lat: position.coords.latitude, lng: position.coords.longitude},
    draggable: false,
    zoom: 15,
    minZoom: 15,
    streetViewControl: false,
    styles: cleanMapStyle
  });
  setCurrentPosition(map, position);
  getSoundTreks(map, position);
}

function error(err) {
  alert("Unable to geolocate. Please enable location settings to use SoundTreks.");
};

var geolocationOptions = {
  enableHighAccuracy: true,
  timeout: 5000,
  maximumAge: 0
};

function watchCurrentPosition() { // constant tracking of user position?
  var positionTimer = navigator.geolocation.watchPosition(
  function (position) {
    setMarkerPosition(
      userMarker,
      position
    );
  });
}

function displayAndWatch(position) {
  setCurrentPosition(position);
  initMap(position)
  watchCurrentPosition();
}

function initLocationProcedure() {
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(displayAndWatch, error, geolocationOptions)
  }
}

